{
  "name": "Hoymiles DTU Solar: Home Assistant Add-on",
  "description": "Get solar data using direct communication with Hoymiles DTU",
  "image": "banny310/hoymiles-dtu-{arch}",
  "version": "0.9.3",
  "slug": "hoymiles-dtu",
  "url": "https://github.com/banny310/hoymiles-dtu-homeassistant-addon",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "startup": "application",
  "boot": "auto",
  "hassio_api": false,
  "homeassistant_api": false,
  "hassio_role": "default",
  "devicetree": false,
  "services": [
    "mqtt:need"
  ],
  "ingress": false,
  "host_network": true,
  "panel_icon": "mdi:solar-power",
  "panel_title": "HoyMiles Solar Data Gateway",
  "panel_admin": false,
  "options": {
    "dtu": {
      "host": "Hoymiles DTU internal network IP, ex.: 192.168.1.5",
      "port": "Hoymiles DTU internal network port, default.: 10081"
    }
  },
  "schema": {
    "dtu": {
      "host": "str",
      "port": "port",
      "watchdog_timeout": "int?"
    },
    "mqtt": {
      "host": "str?",
      "port": "port?",
      "username": "str?",
      "password": "str?"
    },
    "app": {
      "store_messages_in_excel": "bool?",
      "mode": "list(active|passive)?"
    }
  }
}
